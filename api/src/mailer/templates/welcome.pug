doctype html
html
  head
    meta(charset='UTF-8')
    title Welcome
  body(style="font-family: Arial, sans-serif; background-color: #f4f4f4; margin: 0; padding: 0;")
    .container(style="width: 100%; max-width: 600px; margin: 0 auto; background-color: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);")
      .header(style="text-align: center; padding: 10px 0;")
        h1 Welcome, #{name}!
      .content(style="margin: 20px 0;")
        p Thank you for joining our platform.
      .footer(style="text-align: center; padding: 10px 0; font-size: 12px; color: #888888;")
        p &copy; 2023 Your Company